<h1>DuckGoose Users</h1>

<table class="table table-striped table-bordered table-condensed">
  <thead>

  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td align="center"><%= image_tag user.avatar %></td>
        <td><%= link_to user.username, user %></td>
        <td><%= user.firstname %></td>
        <td><%= user.lastname %></td>
        <td><%= mail_to user.email %></td>
        <td><%= link_to "Add as friend", friendships_path(:friend_id => user.id), :method => :post %></td>
      </tr>
    <% end %>
  </tbody>
</table>
