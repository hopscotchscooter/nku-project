<h1><%= @game.title %></h1>

<p>
  <strong>Platform:</strong>
  <%= @game.platform %>
</p>

<p>
  <strong>Release Date:</strong>
  <%= @game.release %>
</p>


 
<h3>Add comment about <%= @game.title %>:</h3>
  <% @game.comments.each do |comment| %>
      <%= comment.content %><br>
<i>Added by <strong><%= comment.author %></strong></i><br>
      <%= link_to 'Destroy', comment, method: :delete, data: { confirm: 'Are you sure?' } %><br>
      <br>
  <% end %>

<%= form_for([@game, @game.comments.build]) do |f| %>
<p><br>
   <%= f.text_area :content %>
</p>
<p>
  <%= f.submit %>
</p>
<% end %>
  


<%= link_to 'Edit', edit_game_path(@game) %> |
<%= link_to 'Back', games_path %>